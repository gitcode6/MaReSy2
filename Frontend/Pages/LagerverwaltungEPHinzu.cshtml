@page
@using Microsoft.AspNetCore.Authorization
@model MaReSy2.Pages.LagerverwaltungEPHinzuModel
@{
    ViewData["Title"] = "Einzelprodukt hinzufügen";
}
@attribute [Authorize(Policy = "AdminsOnly")]
<style>
    .lagerverwaltung_lagerverwaltung {
        background-color: #403A60;
        padding-top: 10px;
        padding-bottom: 1px;
        text-align: center;
        font-family: Dunant;
    }

    .table_detail {
        padding: 2%;
        width: 100%;
        font-family: Dunant;
    }

    .form-group {
        margin: 20px;
    }

    .btnSpeichern {
        color: white;
        background-color: #B70E0C;
    }

    .lagerverwaltung_hinzufügen {
        background-color: #99D6EA;
        padding: 20px;
        font-family: Dunant;
    }
</style>


<div class="lagerverwaltung_lagerverwaltung">
    <h1 style="color: white; font-size:50px;">Lager-Verwaltung</h1>
</div>
<br />
<div class="lagerverwaltung_hinzufügen">
    <h2 style="text-align: center;">EINZELPRODUKT Hinzufügung</h2>
    <form method="post">
        <div class="form-group">
            <label for="Einzelproduktname">Einzelproduktname</label>
            <input type="text" name="einzelproduktname" id="SingleProductName" class="form-control" asp-for="SingleProdukt.SingleProductName"/>
        </div>
        <div class="form-group">
            <label for="Seriennummer">Seriennummer</label>
            <input type="text" name="seriennummer" id="SingleProductSerialNumber" class="form-control" asp-for="SingleProdukt.SingleProductSerialNumber" />
        </div>
        <div class="form-group">
            <label for="EPKategorie">Kategorie</label>
            <select name="epkategorie" id="mainProduct" class="form-control" asp-for="SingleProdukt.productId">
                @foreach (var e in Model.products)
                {
                    <option name="@e.productname" value="@e.productId" selected>(P @e.productId) @e.productname</option>
                } 
            </select>
        </div>
        <div class="form-group">
            <label for="Produktstatus">Status</label>
            <select name="produktstatus" id="produktstatus" class="form-control" asp-for="SingleProdukt.SingleProductStatus">
                <option name="aktiv" value="true" selected>Aktiv</option>
                <option name="inaktiv" value="false">Inaktiv</option>
            </select>
        </div>

        <button type="submit" class="btn btnSpeichern" style="background-color: #403A60;">Speichern</button>
        <a asp-page="/LagerverwaltungEP" class="btn btn-secondary" style="background-color: #B70E0C;">Abbrechen</a>
    </form>
</<div>

<script>
            function previewImage(event) {
                const file = event.target.files[0]; // Die ausgewählte Datei
                const reader = new FileReader();

                reader.onload = function () {
                    const imagePreview = document.getElementById('imagePreview');
                    imagePreview.src = reader.result; // Setze die Quelle des Bildes auf das gelesene Ergebnis
                    imagePreview.style.display = 'block'; // Zeige das Bild an
                }

                if (file) {
                    reader.readAsDataURL(file); // Lese die Datei als Data-URL
                }
            }
</script>
