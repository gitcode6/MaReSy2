<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaReSy2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MaReSy2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">


    <!--für Schriftart, funktioniert nicht-->
    <link rel="stylesheet" href="wwwroot\lib\fonts">

    <style>
        .formatierung_footer {
            background-color: #403A60;
            padding: 10px;
        }


        
    </style>

</head>
<body class="">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Dashboard">
                    <img src="~/images/Logo_nurSchrift_kurz.jpg" alt="Login Image" width="150" height="auto" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">



                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Lagerverwaltung" style="font-size:18px; font-family: Dunant;">[V]Lager</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Übersicht A" style="font-size:18px; font-family: Dunant;">[V]Materialreservierung</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Materialreservierung" style="font-size:18px; font-family: Dunant;">[A]Materialreservierung</a>
                        </li>
                    </ul>


                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="https://www.jugendrotkreuz.at/steiermark">
                                <img src="~/images/Logo_Österreichisches_Rotes_Kreuz.jpg" alt="Logo" class="navbar-brand-img" />
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="width:100%; font-family: Dunant;">
            &copy; 2025 Jugendrotkreuz Steiermark <a asp-area="" asp-page="/Impressum" style="background-color: #403A60; color: white; text-decoration: none; padding: 5px; border-radius: 5px;">Impressum</a> <a asp-area="" asp-page="/Datenschutz" style="background-color: #403A60; color: white; text-decoration: none; padding: 5px; border-radius: 5px;">Datenschutz</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>