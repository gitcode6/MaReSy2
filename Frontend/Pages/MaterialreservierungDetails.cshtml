@page "{id}"
@model MaReSy2.Pages.MaterialreservierungDetailsModel
@{
    ViewData["Title"] = "Materialdetails";
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MaReSy2.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 90%;
            margin: auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 20px 0;
        }

        .card {
            background-color: white;
            width: 22%;
            margin: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.2s;
        }

            .card:hover {
                transform: scale(1.05);
            }

            .card img {
                width: 100%;
                height: auto;
              
            }

            .card h3 {
                font-size: 18px;
                margin: 15px;
            }

            .card p {
                font-size: 14px;
                color: #555;
                margin: 0 15px 15px;
            }

            .card .price {
                font-size: 22px;
                color: #B70E0C;
                margin: 15px;
            }

       
        .btnZurück {
            display: block;
            width: 80%;
            margin: 15px auto;
            padding: 10px;
            text-align: center;
            color: white;
            background-color: #B70E0C;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .btnReservieren {
            display: block;
            width: 80%;
            margin: 15px auto;
            padding: 10px;
            text-align: center;
            color: white;
            background-color: cornflowerblue;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s, color 0.3s;
        }

        .btnReservieren:hover {
            background-color: cornflowerblue;
            color: white;
                
        }

        .btnZurück:hover {
            background-color: #B70E0C;
            color: white;
        }
    </style>
</head>
<body>
    <img src="~/images/Übungsmedikament1.png" alt="Material">
    <h2>@Model.MaterialName</h2>
    <p>@Model.Description</p>
    <a href="/Materialreservierung" class="btnReservieren">Reservieren</a>
    <a href="/Materialreservierung" class="btnZurück">Zurück</a>
</body>
</html>
